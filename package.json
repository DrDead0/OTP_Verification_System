{
  "name": "otp-verification-system",
  "version": "1.0.0",
  "description": "Complete OTP verification system with React components and Express.js middleware - designed for easy integration",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "lib"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "build": "npm-run-all build:*",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && npm run build",
    "test": "npm-run-all test:*",
    "test:client": "cd client && npm run test",
    "test:server": "cd server && npm run test",
    "lint": "npm-run-all lint:*",
    "lint:client": "cd client && npm run lint",
    "lint:server": "cd server && npm run lint",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install",
    "clean": "npm-run-all clean:*",
    "clean:client": "cd client && rm -rf node_modules dist",
    "clean:server": "cd server && rm -rf node_modules dist",
    "publish:all": "npm-run-all publish:*",
    "publish:client": "cd client && npm publish",
    "publish:server": "cd server && npm publish"
  },
  "keywords": [
    "otp",
    "verification",
    "authentication",
    "react",
    "express",
    "email",
    "2fa",
    "security",
    "integration",
    "middleware",
    "components"
  ],
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourorg/otp-verification-system.git"
  },
  "bugs": {
    "url": "https://github.com/yourorg/otp-verification-system/issues"
  },
  "homepage": "https://github.com/yourorg/otp-verification-system#readme",
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
